<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">
    
    <bean id="s1" class="com.sb.di.Student">
        <!-- 方法注入 -->   
        <property name="name" value="John" />
        <property name="age" value="18" />
    </bean>
    
    <bean id="s2" class="com.sb.di.Student">
        <!-- 建構子注入 -->   
        <constructor-arg index="0" value="Mary" type="java.lang.String" />
        <constructor-arg index="1" value="19" type="java.lang.Integer" />
    </bean>
    
    <bean id="s3" class="com.sb.di.Student">
        <!-- 建構子注入 -->
        <constructor-arg value="Tom" />
        <constructor-arg value="20" />
    </bean>
    
    <!-- 利用 p 來注入資料 -->
    <bean id="s4" 
          p:name="Helen"
          p:age="21"
          class="com.sb.di.Student" />
    
    <!-- 利用 c 來注入資料 -->
    <bean id="s5" 
          c:name="Jo"
          c:age="22"
          class="com.sb.di.Student" />
    
    <bean id="t1" 
          class="com.sb.di.Teacher" 
          init-method="init"
          destroy-method="destroy"
          c:name="Vincent" />
    
    <!-- 參考注入 1 -->
    <bean id="s6" class="com.sb.di.Student">
        <property name="name" value="Bob" />
        <property name="age" value="23" />
        <property name="teacher" ref="t1" />
    </bean>
    
    <!-- 參考注入 2 -->
    <bean id="s7" class="com.sb.di.Student">
        <property name="name" value="Jane" />
        <property name="age" value="24" />
        <property name="teacher" ref="t1" />
        <property name="teacher.name" value="Anita" />
    </bean>
    
    <!-- 參考注入 3 -->
    <bean id="s8" class="com.sb.di.Student">
        <property name="name" value="Mark" />
        <property name="age" value="25" />
        <property name="teacher">
            <bean class="com.sb.di.Teacher" c:name="Michael" />
        </property>
    </bean>
    
</beans>
